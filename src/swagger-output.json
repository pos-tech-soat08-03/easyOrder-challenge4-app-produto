    "/produto/listar": {
      "get": {
        "tags": [
          "Produtos"
        ],
        "summary": "Listar Produtos",
        "description": "Lista todos os produtos cadastrados<br><br>  [ Endpoint para integração aos sistemas administrativo e/ou de loja ]",
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/produto/buscar/{id}": {
      "get": {
        "tags": [
          "Produtos"
        ],
        "summary": "Buscar Produto",
        "description": "Busca um produto utilizando o Id.<br><br>  [ Endpoint para integração aos sistemas administrativo e/ou de loja ]",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID do produto",
            "example": "5e73a938-41e7-4b76-a5a0-ae6147266e72"
          }
        ],
        "responses": {
          "200": {
            "description": "Produto localizado:",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "resultado_busca": {
                      "type": "boolean",
                      "example": true
                    },
                    "mensagem": {
                      "type": "string",
                      "example": "Produto localizado:"
                    },
                    "produto": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "5e73a938-41e7-4b76-a5a0-ae6147266e72"
                        },
                        "nome": {
                          "type": "string",
                          "example": "X-Bacon"
                        },
                        "preco": {
                          "type": "number",
                          "example": "20"
                        },
                        "categoria": {
                          "type": "string",
                          "example": "Lanche"
                        }
                      }
                    }
                  }
                }
              },
              "application/xml": {
                "schema": {
                  "properties": {
                    "resultado_busca": {
                      "type": "boolean",
                      "example": true
                    },
                    "mensagem": {
                      "type": "string",
                      "example": "Produto localizado:"
                    },
                    "produto": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "5e73a938-41e7-4b76-a5a0-ae6147266e72"
                        },
                        "nome": {
                          "type": "string",
                          "example": "X-Bacon"
                        },
                        "preco": {
                          "type": "number",
                          "example": "20"
                        },
                        "categoria": {
                          "type": "string",
                          "example": "Lanche"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Solicitação Inválida"
          },
          "404": {
            "description": "Produto não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "resultado_busca": {
                      "type": "boolean",
                      "example": false
                    },
                    "mensagem": {
                      "type": "string",
                      "example": "Produto não encontrado"
                    }
                  }
                }
              },
              "application/xml": {
                "schema": {
                  "properties": {
                    "resultado_busca": {
                      "type": "boolean",
                      "example": false
                    },
                    "mensagem": {
                      "type": "string",
                      "example": "Produto não encontrado"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/produto/listar/{categoria}": {
      "get": {
